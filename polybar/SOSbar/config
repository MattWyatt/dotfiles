; Set the scroll cycle direction 
; Default: true
reverse-scroll = false

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;1
ws-icon-5 = 5;2
ws-icon-6 = 6;3
ws-icon-7 = 7;4
ws-icon-8 = 8;5
ws-icon-9 = 9;6
ws-icon-default = X

