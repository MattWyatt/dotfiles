;#############;
; DATE MODULE ;
;##############;

[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = "%{O-10} %{T1}  %{T-} %r %{T1}  %{T-} %A, %d %B %Y %{O10}"


;############;
; CPU MODULE ;
;#############;

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
interval = 1

label = "%{O-10}  CPU%percentage:3:3%% %{O10}"

;###############;
; MEMORY MODULE ;
;###############;
[module/memory]
type = internal/memory

label = "%{O-10}  MEM %gb_used%/%gb_total% %{O10} "

format = <label>



;################;
; NETWORK MODULE ;
;################;

[module/network]
type = internal/network
interface = wlp3s0f0u1

label-active-font = 1

; Seconds to sleep between updates
; Default: 1
interval = 3.0

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = %{O-10} %{T1}  %{T-}<label-connected> %{O10}

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %local_ip6% [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = %downspeed:5:5%s
label-connected-foreground = ${colors.FRG}

; Available tokens:
;   %ifname%    [wireless+wired]
; Default: (none)
label-disconnected = 0 KB/s
label-disconnected-foreground = ${colors.FRG}


;###################;
; PULSEAUDIO MODULE ;
;###################;

[module/pulseaudio]
type = internal/pulseaudio

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points) (unreleased)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = %{O-10} %{T1} %{T-} <label-volume> %{O10}

label-muted = %{O-10} %{T1} %{T-} 00% %{O10}



;#################;
; SPOTIFY MODULES ;
;#################;


;###############;
; PREVIOUS SONG ;
;###############;

[module/previous]
type = custom/script
interval = 86400
label-active-font = 1
format = "%{F#2a2b32}<label>"
format-padding = 1
; Previous song icon
; 
exec = echo ""
format-underline = ${colors.FRG}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

;###########;
; NEXT SONG ;
;###########;

[module/next]
type = custom/script
interval = 86400
label-active-font = 1
format = "%{F#2a2b32}<label>"
format-padding = 1
; Next song icon
; "
exec = echo "  "
format-underline = ${colors.FRG}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

;################;
; PLAY AND PAUSE ;
;################;

[module/playpause]
type = custom/ipc
label-active-font = 1
; Default
hook-0 = echo "%{F#2a2b32} "
; Playing
; %{F#41933e} 
hook-1 = echo "%{F#2a2b32} "
; Paused
; {F#41933e} 
hook-2 = echo "%{F#2a2b32} "
initial = 1
format-underline = ${colors.FRG}
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

;##############;
; SONG DISPLAY ;
;##############;

[module/spotify]
type = custom/script
exec = python3 ~/.config/polybar/SOSbar/polybar-spotify-controls/scripts/spotify/spotify_status.py
format-underline = ${colors.FRG}
format = "<label>"
interval = 1
line-size = 1
click-left = i3-msg '[class="Spotify"] focus'



